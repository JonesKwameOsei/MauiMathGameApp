<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMathGameApp.MainPage"
             Title="Math Game Main Menu">

  <ScrollView>
    <VerticalStackLayout Spacing="40"
        Padding="30,50,30,30">

      <!-- Hero Section -->
      <VerticalStackLayout Spacing="15"
          HorizontalOptions="Center">
        <Label Text="🧮 Math Master 🧮"
               FontFamily="CaveatBrush"
               FontSize="48"
               TextColor="#2E3440"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <Label Text="Challenge your mind with fun math!"
               FontFamily="CaveatBrush"
               FontSize="22"
               TextColor="#5E81AC"
               HorizontalOptions="Center"/>
      </VerticalStackLayout>

      <!-- Game Type Selection -->
      <VerticalStackLayout Spacing="25">
        <Label Text="Choose Your Adventure"
               FontFamily="CaveatBrush"
               FontSize="28"
               TextColor="#2E3440"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <!-- Operation Cards Grid -->
        <Grid RowSpacing="20"
            ColumnSpacing="15"
            Margin="0,10">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <!-- Addition Card -->
          <Border Grid.Row="0"
              Grid.Column="0"
                  BackgroundColor="White"
                  Stroke="#88C0D0"
                  StrokeThickness="2">
            <Border.StrokeShape>
              <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>
            <Border.GestureRecognizers>
              <TapGestureRecognizer Tapped="OnGameChosen"
                  CommandParameter="Addition"/>
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="8"
                HorizontalOptions="Center"
                Padding="20">
              <Label Text="➕"
                     FontSize="32"
                     TextColor="#88C0D0"
                     HorizontalOptions="Center"/>
              <Label Text="Addition"
                     FontFamily="CaveatBrush"
                     FontSize="16"
                     TextColor="#2E3440"
                     HorizontalOptions="Center"
                     FontAttributes="Bold"/>
            </VerticalStackLayout>
          </Border>

          <!-- Subtraction Card -->
          <Border Grid.Row="0"
              Grid.Column="1"
                  BackgroundColor="White"
                  Stroke="#BF616A"
                  StrokeThickness="2">
            <Border.StrokeShape>
              <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>
            <Border.GestureRecognizers>
              <TapGestureRecognizer Tapped="OnGameChosen"
                  CommandParameter="Subtraction"/>
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="8"
                HorizontalOptions="Center"
                Padding="20">
              <Label Text="➖"
                     FontSize="32"
                     TextColor="#BF616A"
                     HorizontalOptions="Center"/>
              <Label Text="Subtraction"
                     FontFamily="CaveatBrush"
                     FontSize="16"
                     TextColor="#2E3440"
                     HorizontalOptions="Center"
                     FontAttributes="Bold"/>
            </VerticalStackLayout>
          </Border>

          <!-- Multiplication Card -->
          <Border Grid.Row="1"
              Grid.Column="0"
                  BackgroundColor="White"
                  Stroke="#A3BE8C"
                  StrokeThickness="2">
            <Border.StrokeShape>
              <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>
            <Border.GestureRecognizers>
              <TapGestureRecognizer Tapped="OnGameChosen"
                  CommandParameter="Multiplication"/>
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="8"
                HorizontalOptions="Center"
                Padding="20">
              <Label Text="✖️"
                     FontSize="32"
                     TextColor="#A3BE8C"
                     HorizontalOptions="Center"/>
              <Label Text="Multiplication"
                     FontFamily="CaveatBrush"
                     FontSize="16"
                     TextColor="#2E3440"
                     HorizontalOptions="Center"
                     FontAttributes="Bold"/>
            </VerticalStackLayout>
          </Border>

          <!-- Division Card -->
          <Border Grid.Row="1"
              Grid.Column="1"
                  BackgroundColor="White"
                  Stroke="#EBCB8B"
                  StrokeThickness="2">
            <Border.StrokeShape>
              <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>
            <Border.GestureRecognizers>
              <TapGestureRecognizer Tapped="OnGameChosen"
                  CommandParameter="Division"/>
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="8"
                HorizontalOptions="Center"
                Padding="20">
              <Label Text="➗"
                     FontSize="32"
                     TextColor="#EBCB8B"
                     HorizontalOptions="Center"/>
              <Label Text="Division"
                     FontFamily="CaveatBrush"
                     FontSize="16"
                     TextColor="#2E3440"
                     HorizontalOptions="Center"
                     FontAttributes="Bold"/>
            </VerticalStackLayout>
          </Border>
        </Grid>
      </VerticalStackLayout>

      <!-- History Button -->
      <Border BackgroundColor="#5E81AC"
              Stroke="Transparent"
              Margin="20,30,20,0">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="25"/>
        </Border.StrokeShape>
        <Button Text="📊 View Game History"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="CaveatBrush"
                FontSize="20"
                Clicked="OnViewPreviousGamesChosen"
                Padding="25,15"/>
      </Border>

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
