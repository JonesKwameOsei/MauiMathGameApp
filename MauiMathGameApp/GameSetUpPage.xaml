<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMathGameApp.GameSetUpPage"
             Title="Game SetUp"
             BackgroundImageSource="math_pattern.svg">
  <ScrollView>
    <VerticalStackLayout Spacing="35"
        Padding="30,50,30,30">

      <!-- Header Section -->
      <VerticalStackLayout Spacing="15"
          HorizontalOptions="Center">
        <Label Text="ðŸ› ï¸ Game Setup"
               FontFamily="CaveatBrush"
               FontSize="42"
               TextColor="#2E3440"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <Label Text="Configure your challenge!"
               FontFamily="CaveatBrush"
               FontSize="20"
               TextColor="#5E81AC"
               HorizontalOptions="Center"/>
      </VerticalStackLayout>

      <!-- Game Type Display Card -->
      <Border BackgroundColor="White"
              Stroke="#88C0D0"
              StrokeThickness="2"
              Margin="0,10">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="15"/>
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="10"
            Padding="25">
          <Label Text="Selected Game Type"
                 FontFamily="CaveatBrush"
                 FontSize="18"
                 TextColor="#5E81AC"
                 HorizontalOptions="Center"
                 FontAttributes="Bold"/>
          <Label x:Name="GameTypeLabel"
                 FontFamily="CaveatBrush"
                 FontSize="28"
                 TextColor="#2E3440"
                 HorizontalOptions="Center"
                 FontAttributes="Bold"/>
        </VerticalStackLayout>
      </Border>

      <!-- Questions Setup Card -->
      <Border BackgroundColor="White"
              Stroke="#A3BE8C"
              StrokeThickness="2"
              Margin="0,10">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="15"/>
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="20"
            Padding="25">
          <Label Text="How many questions?"
                 FontFamily="CaveatBrush"
                 FontSize="24"
                 TextColor="#2E3440"
                 HorizontalOptions="Center"
                 FontAttributes="Bold"/>

          <Entry x:Name="QuestionsEntry"
                 Placeholder="Enter number (1-50)"
                 Keyboard="Numeric"
                 FontFamily="CaveatBrush"
                 FontSize="20"
                 TextColor="#2E3440"
                 PlaceholderColor="#8FBCBB"
                 BackgroundColor="#ECEFF4"
                 HorizontalOptions="Center"
                 WidthRequest="200"
                 HeightRequest="50"
                 HorizontalTextAlignment="Center"/>

          <!-- Quick Select Buttons -->
          <Label Text="Quick Select:"
                 FontFamily="CaveatBrush"
                 FontSize="16"
                 TextColor="#5E81AC"
                 HorizontalOptions="Center"/>

          <StackLayout Orientation="Horizontal"
                       HorizontalOptions="Center"
                       Spacing="10">
            <Button Text="5"
                    BackgroundColor="#D8DEE9"
                    TextColor="#2E3440"
                    FontFamily="CaveatBrush"
                    FontSize="16"
                    WidthRequest="60"
                    HeightRequest="40"
                    CornerRadius="10"
                    Clicked="OnQuickSelectClicked"/>
            <Button Text="10"
                    BackgroundColor="#D8DEE9"
                    TextColor="#2E3440"
                    FontFamily="CaveatBrush"
                    FontSize="16"
                    WidthRequest="60"
                    HeightRequest="40"
                    CornerRadius="10"
                    Clicked="OnQuickSelectClicked"/>
            <Button Text="20"
                    BackgroundColor="#D8DEE9"
                    TextColor="#2E3440"
                    FontFamily="CaveatBrush"
                    FontSize="16"
                    WidthRequest="60"
                    HeightRequest="40"
                    CornerRadius="10"
                    Clicked="OnQuickSelectClicked"/>
          </StackLayout>
        </VerticalStackLayout>
      </Border>

      <!-- Start Game Button -->
      <Border BackgroundColor="#A3BE8C"
              Stroke="Transparent"
              Margin="20,20,20,0">
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="25"/>
        </Border.StrokeShape>
        <Button Text="ðŸš€ Start Game!"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="CaveatBrush"
                FontSize="24"
                FontAttributes="Bold"
                Clicked="OnStartGameClicked"
                Padding="30,18"/>
      </Border>

    </VerticalStackLayout>
  </ScrollView>
</ContentPage>